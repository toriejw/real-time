extends layout

block content
  div.container
    p#question= poll.question
    
    .row
      .col-md-3
      .col-md-6
        p#vote-status
      .col-md-3
    
    p Pick an answer below:
    
    .row#responses
      .col-md-3
      .col-md-6
        each response in poll.responses
          button.btn.btn-primary.poll-response(id=poll.id)= response
          br
          br
          
      .col-md-3
    
    .row
    .col-md-2
    .col-md-8
      div(id='results-' + poll.id)
    .col-md-2
      
  script(src='/socket.io/socket.io.js')
  script(src='/scripts/record-and-display-votes.js')    
